.label {
    position: absolute;
    top: 10px;
    left: 10px;
    padding: 5px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
}

.label.out-of-stock {
    background-color: #ff4444;
    color: white;
}

.label.new {
