.product__item__pic {
    position: relative;
    width: 100%;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: #f8f8f8;
    padding: 20px;
}

.product__item__pic img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
}

.product__item:hover .product__item__pic img {
    transform: scale(1.05);
}

.product__item__text {
    padding: 15px;
}

