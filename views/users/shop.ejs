    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

.search-container input[type="text"] {
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 3px 0 0 3px;
    font-size: 14px;
    width: 250px;
}

.search-container button {
    padding: 8px 16px;
