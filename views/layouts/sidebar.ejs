<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BLACK FASHION | we make we sell</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
    }

    .menu-btn {
      position:absolute;
      top: 180px;
      left: 20px;
      font-size: 24px;
      cursor: pointer;
      z-index: 100;
      display: none;
      background: none;
      border: none;
      color: #333;
    }

    .sidebar {
      width: 250px;
      background: #fff;
      min-height: 100vh;
      padding: 20px 0;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .nav-link {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: #333;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .nav-link i {
      margin-right: 15px;
      width: 20px;
      text-align: center;
    }

    .nav-link:hover {
      background: #f0f0f0;
    }

    .nav-link.active {
      background: #ff4444;
      color: white;
      margin: 0 15px;
      border-radius: 5px;
    }

    .nav-link.active i {
      color: white;
    }

    @media (max-width: 768px) {
      .menu-btn {
        display: block;
      }

      .sidebar {
        position: fixed;
        left: -250px;
        transition: 0.3s;
        z-index: 99;
      }

      .sidebar.active {
        left: 0;
      }

      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <button class="menu-btn" id="menuBtn">
    <i class="fas fa-bars"></i>
  </button>

  <div class="sidebar" id="sidebar">
    <a href="/profile" class="nav-link">
      <i class="fas fa-user"></i>
      <span>Profile</span>
    </a>
    <a href="/myOrders" class="nav-link">
      <i class="fas fa-shopping-cart"></i>
      <span>My Orders</span>
    </a>
    <a href="/wishlist" class="nav-link">
      <i class="fas fa-heart"></i>
      <span>Wishlist</span>
    </a>
    <a href="/coupons" class="nav-link">
      <i class="fas fa-tag"></i>
      <span>My Coupons</span>
    </a>
    <a href="/Wallet" class="nav-link">
      <i class="fas fa-wallet"></i>
      <span>Wallet</span>
    </a>
    <a href="/address" class="nav-link">
      <i class="fas fa-star"></i>
      <span>Address</span>
    </a>
    <a href="/refferal" class="nav-link">
      <i class="fas fa-wallet"></i>
      <span>Referral</span>
    </a>
    <a href="/logout" class="nav-link">
      <i class="fas fa-sign-out-alt"></i>
      <span>Logout</span>
    </a>
  </div>

  <script>
    // Simple toggle functionality
    const menuBtn = document.getElementById('menuBtn');
    const sidebar = document.getElementById('sidebar');
    
    menuBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });

    // Close sidebar when clicking outside
    document.addEventListener('click', (e) => {
      if (!sidebar.contains(e.target) && !menuBtn.contains(e.target)) {
        sidebar.classList.remove('active');
      }
    });

    // Handle active state based on current URL
    const navLinks = document.querySelectorAll('.nav-link');
    const currentUrl = window.location.pathname; // Get the current URL path

    navLinks.forEach(link => {
      // Check if the link's href matches the current URL
      if (link.getAttribute('href') === currentUrl) {
        link.classList.add('active');
      }

      // Add click event to handle active state on click
      link.addEventListener('click', () => {
        navLinks.forEach(l => l.classList.remove('active'));
        link.classList.add('active');
      });
    });
  </script>
</body>
</html>